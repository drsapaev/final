# ===========================================
# Clinic Management System - Environment Variables
# ===========================================
# Copy this file to .env and adjust values

# -------------------------------------------
# Database
# -------------------------------------------
DATABASE_URL=sqlite:////data/app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host:5432/clinic

# -------------------------------------------
# Application
# -------------------------------------------
APP_NAME=Clinic Queue Manager
APP_VERSION=1.0.0
ENV=production
# ENV options: dev, staging, production

# -------------------------------------------
# Security / Authentication
# -------------------------------------------
# CRITICAL: Change this in production!
SECRET_KEY=change-me-in-production-use-secrets-token-urlsafe-32
AUTH_SECRET=change-me-in-prod
ACCESS_TOKEN_EXPIRE_MINUTES=720
REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
CORS_ALLOW_ALL=0
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -------------------------------------------
# Admin User (Bootstrap)
# -------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@example.com
ADMIN_FULL_NAME=Administrator
ADMIN_RESET_PASSWORD=0

# -------------------------------------------
# Server Configuration
# -------------------------------------------
HOST=0.0.0.0
PORT=8000
RELOAD=0
WORKERS=2

# -------------------------------------------
# Printer Configuration (optional)
# -------------------------------------------
PRINTER_TYPE=none
# PRINTER_TYPE options: none, network, usb
PRINTER_NET_HOST=
PRINTER_NET_PORT=9100
PRINTER_USB_VID=
PRINTER_USB_PID=

# -------------------------------------------
# Licensing / Activation
# -------------------------------------------
REQUIRE_LICENSE=1
LICENSE_MODE=activation
LICENSE_ALLOW_HEALTH=1

# -------------------------------------------
# Backups
# -------------------------------------------
AUTO_BACKUP_ENABLED=1
BACKUP_HOUR=2
BACKUP_MINUTE=0

# -------------------------------------------
# Frontend (Vite)
# -------------------------------------------
VITE_API_BASE=http://localhost:8000/api/v1
VITE_API_URL=http://localhost:8000

# -------------------------------------------
# Optional: External Services
# -------------------------------------------
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=
# SMS_PROVIDER=
# SMS_API_KEY=
# CLICK_MERCHANT_ID=
# CLICK_SERVICE_ID=
# CLICK_SECRET_KEY=
