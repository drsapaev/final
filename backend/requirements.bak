# === App meta ===
DEBUG=1
APP_NAME="Clinic Queue Manager"
APP_VERSION="0.9.0"
API_V1_STR=/api/v1

# === CORS ===
# Если CORS_ALLOW_ALL=1 — список CORS_ORIGINS игнорируется.
CORS_ALLOW_ALL=1
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# === Database ===
# SQLite по умолчанию (файл создастся рядом с backend/)
DATABASE_URL=sqlite:///./clinic.db
# Пример PostgreSQL:
# DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/clinic

# === Auth / JWT ===
AUTH_SECRET=change-me-in-prod
ACCESS_TOKEN_EXPIRE_MINUTES=720
AUTH_ALGORITHM=HS256

# === Printing / PDFs ===
CLINIC_LOGO_PATH=
PDF_FOOTER_ENABLED=1

# === ESC/POS printer ===
PRINTER_TYPE=none        # none|network|usb
PRINTER_NET_HOST=
PRINTER_NET_PORT=9100
PRINTER_USB_VID=
PRINTER_USB_PID=

# === Licensing (активация) ===
REQUIRE_LICENSE=0
LICENSE_ALLOW_HEALTH=1
