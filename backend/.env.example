ENV=dev
APP_NAME="Clinic Queue Manager"
APP_VERSION="0.9.0"
API_V1_STR=/api/v1
TIMEZONE=Asia/Tashkent

# CORS: если CORS_ALLOW_ALL=1, список CORS_ORIGINS игнорируется
CORS_DISABLE=0
CORS_ALLOW_ALL=0
# через запятую; должен совпадать с адресами фронта
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database
DATABASE_URL=sqlite:///./clinic.db

# Auth / JWT
SECRET_KEY=change_me_please_64chars_minimum________________________________
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Printing / PDFs
CLINIC_LOGO_PATH=
PDF_FOOTER_ENABLED=1

# ESC/POS printer
PRINTER_TYPE=none        # none|network|usb
PRINTER_NET_HOST=
PRINTER_NET_PORT=9100
PRINTER_USB_VID=
PRINTER_USB_PID=

# Licensing
REQUIRE_LICENSE=0
LICENSE_ALLOW_HEALTH=1

# PROD/DOCKER (Postgres) — раскомментируйте и закомментируйте строку SQLite выше
# DB_HOST=postgres
# DB_PORT=5432
# DB_USER=clinic
# DB_PASSWORD=clinicpwd
# DB_NAME=clinicdb
# DATABASE_URL=postgresql+psycopg://clinic:clinicpwd@postgres:5432/clinicdb

# ===== Redis (на будущее) =====
# REDIS_URL=redis://redis:6379/0