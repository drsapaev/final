{% comment %}
Шаблон рецепта для печати на A5
Основа: passport.md стр. 1925-2063
{% endcomment %}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Рецепт № {{ prescription.number }}</title>
    <style>
        @page {
            size: A5;
            margin: 15mm;
        }
        
        body {
            font-family: 'Times New Roman', serif;
            font-size: 12pt;
            line-height: 1.4;
            margin: 0;
            color: #000;
        }
        
        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 15px;
        }
        
        .clinic-name {
            font-size: 14pt;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .license-info {
            font-size: 10pt;
            margin-bottom: 5px;
        }
        
        .prescription-number {
            font-size: 16pt;
            font-weight: bold;
            margin-top: 10px;
        }
        
        .patient-info {
            margin: 15px 0;
            border: 1px solid #000;
            padding: 10px;
        }
        
        .doctor-info {
            float: right;
            width: 40%;
            font-size: 10pt;
            margin-bottom: 15px;
        }
        
        .medications {
            clear: both;
            margin: 20px 0;
        }
        
        .medication {
            margin-bottom: 15px;
            padding: 10px;
            border-left: 3px solid #007bff;
        }
        
        .med-name {
            font-size: 13pt;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .med-dosage {
            font-style: italic;
            margin-bottom: 5px;
        }
        
        .med-instructions {
            font-size: 11pt;
            line-height: 1.3;
        }
        
        .footer {
            margin-top: 30px;
            border-top: 1px solid #000;
            padding-top: 15px;
        }
        
        .signature-block {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        
        .signature {
            width: 45%;
        }
        
        .signature-line {
            border-bottom: 1px solid #000;
            height: 20px;
            margin-bottom: 5px;
        }
        
        .qr-code {
            position: absolute;
            top: 15mm;
            right: 15mm;
            width: 60px;
            height: 60px;
        }
        
        @media print {
            .no-print { display: none; }
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="clinic-name">{{ clinic.name }}</div>
        <div class="license-info">
            Лицензия: {{ clinic.license_number }}<br>
            {{ clinic.address }}<br>
            Тел: {{ clinic.phone }}
        </div>
        <div class="prescription-number">РЕЦЕПТ № {{ prescription.number }}</div>
    </div>

    {% if qr_code_url %}
    <div class="qr-code">
        <img src="{{ qr_code_url }}" alt="QR Code" style="width: 100%; height: 100%;">
    </div>
    {% endif %}

    <div class="doctor-info">
        <strong>Врач:</strong> {{ doctor.full_name }}<br>
        <strong>Специальность:</strong> {{ doctor.specialty_name }}<br>
        <strong>Лицензия:</strong> {{ doctor.license_number }}<br>
        <strong>Дата:</strong> {{ prescription.date | strftime('%d.%m.%Y') }}<br>
        <strong>Время:</strong> {{ prescription.time | strftime('%H:%M') }}
    </div>

    <div class="patient-info">
        <strong>Пациент:</strong> {{ patient.full_name }}<br>
        <strong>Дата рождения:</strong> {{ patient.birth_date | strftime('%d.%m.%Y') }}<br>
        <strong>Адрес:</strong> {{ patient.address or 'Не указан' }}<br>
        <strong>Телефон:</strong> {{ patient.phone }}<br>
        {% if visit.diagnosis %}
        <strong>Диагноз:</strong> {{ visit.diagnosis }}
        {% if visit.icd10 %} ({{ visit.icd10 }}){% endif %}
        {% endif %}
    </div>

    <div class="medications">
        <h3>НАЗНАЧЕНИЯ:</h3>
        
        {% for medication in prescription.medications %}
        <div class="medication">
            <div class="med-name">
                {{ loop.index }}. {{ medication.name }}
                {% if medication.form %} ({{ medication.form }}){% endif %}
            </div>
            
            {% if medication.dosage %}
            <div class="med-dosage">
                Дозировка: {{ medication.dosage }}
            </div>
            {% endif %}
            
            <div class="med-instructions">
                <strong>Способ применения:</strong><br>
                {{ medication.instructions | nl2br }}
            </div>
            
            {% if medication.duration %}
            <div class="med-duration">
                <strong>Курс лечения:</strong> {{ medication.duration }}
            </div>
            {% endif %}
            
            {% if medication.notes %}
            <div class="med-notes">
                <strong>Примечания:</strong> {{ medication.notes }}
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>

    {% if prescription.recommendations %}
    <div class="recommendations">
        <h3>РЕКОМЕНДАЦИИ:</h3>
        <p>{{ prescription.recommendations | nl2br }}</p>
    </div>
    {% endif %}

    {% if prescription.next_visit %}
    <div class="next-visit">
        <h3>СЛЕДУЮЩИЙ ВИЗИТ:</h3>
        <p>{{ prescription.next_visit | strftime('%d.%m.%Y в %H:%M') }}</p>
    </div>
    {% endif %}

    <div class="footer">
        <div class="signature-block">
            <div class="signature">
                <div class="signature-line"></div>
                <div>Подпись врача</div>
            </div>
            <div class="signature">
                <div class="signature-line"></div>
                <div>Печать учреждения</div>
            </div>
        </div>
        
        <div style="margin-top: 20px; font-size: 10pt; text-align: center;">
            Рецепт действителен в течение 30 дней с даты выписки<br>
            При утере рецепта обращаться к лечащему врачу
        </div>
    </div>
</body>
</html>
